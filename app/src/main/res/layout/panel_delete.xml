<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingLeft="10dp"
  android:paddingRight="10dp"
  android:background="?attr/colorPrimary">

  <CheckBox
    android:id="@+id/panel_delete_select_all_checkbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBaseline_toBottomOf="parent"
    android:text="@string/select_all_label" />

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBaseline_toBottomOf="parent">

    <ImageButton
      android:id="@+id/panel_delete_cancel_button"
      android:src="@drawable/core_icon_cancel"
      android:layout_width="48dp"
      android:layout_height="48dp"/>

    <ImageButton
      android:id="@+id/panel_delete_approve_button"
      android:src="@drawable/core_icon_delete"
      android:layout_width="48dp"
      android:layout_height="48dp" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>